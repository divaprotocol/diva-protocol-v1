    "diva::revokePendingTreasuryUpdate": "yarn hardhat run scripts/examples/revokePendingTreasuryUpdate.ts",
    "diva::pauseReturnCollateral": "yarn hardhat run scripts/examples/pauseReturnCollateral.ts",
    "diva::unpauseReturnCollateral": "yarn hardhat run scripts/examples/unpauseReturnCollateral.ts",
    "diva::redeemPositionToken": "yarn hardhat run scripts/examples/redeemPositionToken.ts",
    "diva::getOwner": "yarn hardhat run scripts/examples/getOwner.ts",
    "diva::postCreateContingentPoolOffer": "yarn hardhat run scripts/examples/postCreateContingentPoolOffer.ts",
    "diva::postAddLiquidityOffer": "yarn hardhat run scripts/examples/postAddLiquidityOffer.ts",
    "diva::postRemoveLiquidityOffer": "yarn hardhat run scripts/examples/postRemoveLiquidityOffer.ts",
    "diva::claimFee": "yarn hardhat run scripts/examples/claimFee.ts",
    "diva::challengeFinalReferenceValue": "yarn hardhat run scripts/examples/challengeFinalReferenceValue.ts",
    "diva::getOfferRelevantStateCreateContingentPool_multicall": "yarn hardhat run scripts/examples/getOfferRelevantStateCreateContingentPool_multicall.ts",
    "diva::getOfferRelevantStateCreateContingentPool": "yarn hardhat run scripts/examples/getOfferRelevantStateCreateContingentPool.ts",
    "diva::getOfferRelevantStateAddLiquidity": "yarn hardhat run scripts/examples/getOfferRelevantStateAddLiquidity.ts",
    "diva::getOfferRelevantStateRemoveLiquidity": "yarn hardhat run scripts/examples/getOfferRelevantStateRemoveLiquidity.ts",
    "diva::getOwnershipContract": "yarn hardhat run scripts/examples/getOwnershipContract.ts",
    "diva::addTip": "yarn hardhat run scripts/examples/addTip.ts",
    "diva::facets": "yarn hardhat run scripts/examples/facets.ts",
    "diva::facetFunctionSelectors": "yarn hardhat run scripts/examples/facetFunctionSelectors.ts",
    "diva::facetAddresses": "yarn hardhat run scripts/examples/facetAddresses.ts",
    "diva::facetAddress": "yarn hardhat run scripts/examples/facetAddress.ts",
