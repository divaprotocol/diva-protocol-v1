{
  "name": "diva-protocol",
  "version": "1.0.0",
  "description": "A suite of smart contracts to create and settle derivative assets.",
  "main": "index.js",
  "scripts": {
    "sl": "yarn prettier --write contracts/**/*.sol",
    "sh": "solhint -f table contracts/**/*.sol",
    "t": "npx hardhat typechain && npx hardhat test",
    "c": "yarn hardhat compile",
    "size": "yarn hardhat size-contracts",
    "coverage": "npx hardhat coverage",
    "abi": "yarn hardhat compile && npx hardhat diamondABI",
    "diva::createContingentPool": "yarn hardhat run scripts/examples/createContingentPool.ts",
    "diva::addLiquidity": "yarn hardhat run scripts/examples/addLiquidity.ts",
    "diva::removeLiquidity": "yarn hardhat run scripts/examples/removeLiquidity.ts",
    "diva::setFinalReferenceValue": "yarn hardhat run scripts/examples/setFinalReferenceValue.ts",
    "diva::getPoolParameters": "yarn hardhat run scripts/examples/getPoolParameters.ts",
    "diva::getGovernanceParameters": "yarn hardhat run scripts/examples/getGovernanceParameters.ts",
    "diva::getClaim": "yarn hardhat run scripts/examples/getClaim.ts",
    "diva::getReservedClaim": "yarn hardhat run scripts/examples/getReservedClaim.ts",
    "diva::getPoolParametersByAddress": "yarn hardhat run scripts/examples/getPoolParametersByAddress.ts",
    "diva::getQueryDataAndId": "yarn hardhat run scripts/examples/getQueryDataAndId.ts",
    "diva::fillOfferCreateContingentPool": "yarn hardhat run scripts/examples/fillOfferCreateContingentPool.ts",
    "diva::fillOfferAddLiquidity": "yarn hardhat run scripts/examples/fillOfferAddLiquidity.ts",
    "diva::fillOfferRemoveLiquidity": "yarn hardhat run scripts/examples/fillOfferRemoveLiquidity.ts",
    "diva::cancelOfferCreateContingentPool": "yarn hardhat run scripts/examples/cancelOfferCreateContingentPool.ts",
    "diva::cancelOfferAddLiquidity": "yarn hardhat run scripts/examples/cancelOfferAddLiquidity.ts",
    "diva::cancelOfferRemoveLiquidity": "yarn hardhat run scripts/examples/cancelOfferRemoveLiquidity.ts",
    "diva::transferFeeClaim": "yarn hardhat run scripts/examples/transferFeeClaim.ts",
    "diva::updateTreasury": "yarn hardhat run scripts/examples/updateTreasury.ts",
    "diva::updateFees": "yarn hardhat run scripts/examples/updateFees.ts",
    "diva::updateSettlementPeriods": "yarn hardhat run scripts/examples/updateSettlementPeriods.ts",
    "diva::updateFallbackDataProvider": "yarn hardhat run scripts/examples/updateFallbackDataProvider.ts",
    "diva::revokePendingFeesUpdate": "yarn hardhat run scripts/examples/revokePendingFeesUpdate.ts",
    "diva::revokePendingSettlementPeriodsUpdate": "yarn hardhat run scripts/examples/revokePendingSettlementPeriodsUpdate.ts",
