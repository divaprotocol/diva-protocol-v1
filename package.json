{
  "name": "diva-protocol",
  "version": "1.0.0",
  "description": "A suite of smart contracts to create and settle derivative assets.",
  "main": "index.js",
  "scripts": {
    "sl": "yarn prettier --write contracts/**/*.sol",
    "sh": "solhint -f table contracts/**/*.sol",
    "t": "npx hardhat typechain && npx hardhat test",
    "c": "yarn hardhat compile",
    "size": "yarn hardhat size-contracts",
    "coverage": "npx hardhat coverage",
    "abi": "yarn hardhat compile && npx hardhat diamondABI",
    "diva::create": "yarn hardhat run scripts/examples/createContingentPool.ts --network goerli",
    "diva::add": "yarn hardhat run scripts/examples/addLiquidity.ts --network goerli",
    "diva::remove": "yarn hardhat run scripts/examples/removeLiquidity.ts --network goerli",
    "diva::setFinalReferenceValue": "yarn hardhat run scripts/examples/setFinalReferenceValue.ts --network goerli",
    "diva::getPoolParameters": "yarn hardhat run scripts/examples/getPoolParameters.ts --network goerli",
    "diva::fillOfferCreateContingentPool": "yarn hardhat run scripts/examples/fillOfferCreateContingentPool.ts --network goerli",
    "diva::transferOwnership": "yarn hardhat run scripts/examples/transferOwnership.ts --network goerli",
    "diva::transferFeeClaim": "yarn hardhat run scripts/examples/transferFeeClaim.ts --network goerli",
    "diva::updateTreasury": "yarn hardhat run scripts/examples/updateTreasury.ts --network goerli",
    "diva::redeemPositionToken": "yarn hardhat run scripts/examples/redeemPositionToken.ts --network goerli",
    "diva::owner": "yarn hardhat run scripts/examples/owner.ts --network goerli",
    "diva::postCreateContingentPoolOffer": "yarn hardhat run scripts/examples/postCreateContingentPoolOffer.ts --network goerli",
    "diva::postAddLiquidityOffer": "yarn hardhat run scripts/examples/postAddLiquidityOffer.ts --network goerli",
    "diva::postRemoveLiquidityOffer": "yarn hardhat run scripts/examples/postRemoveLiquidityOffer.ts --network goerli",
    "diva::getGovernanceParameters": "yarn hardhat run scripts/examples/getGovernanceParameters.ts --network goerli",
    "diva::getClaim": "yarn hardhat run scripts/examples/getClaim.ts --network goerli",
    "diva::claimFee": "yarn hardhat run scripts/examples/claimFee.ts --network goerli",
    "diva::challengeFinalReferenceValue": "yarn hardhat run scripts/examples/challengeFinalReferenceValue.ts --network goerli",
    "diva::getOfferRelevantStateCreateContingentPool_multicall": "yarn hardhat run scripts/examples/getOfferRelevantStateCreateContingentPool_multicall.ts --network goerli",
    "erc20::deploy": "yarn hardhat run scripts/examples/deployERC20Token.ts --network goerli",
    "erc20::approve": "yarn hardhat run scripts/examples/approve.ts --network goerli",
    "erc20::allowance_multicall": "yarn hardhat run scripts/examples/allowance_multicall.ts --network goerli",
    "deploy:main:goerli": "yarn hardhat run scripts/deployMain.ts --network goerli && yarn verify:main && yarn disableUpgradeability:goerli",
    "deploy:main:sepolia": "yarn hardhat run scripts/deployMain.ts --network sepolia && yarn verify:main && yarn disableUpgradeability:sepolia",
    "deploy:main:apothem": "yarn hardhat run scripts/deployMain.ts --network apothem && yarn verify:main && yarn disableUpgradeability:apothem",
    "deploy:secondary:goerli": "yarn hardhat run scripts/deploySecondary.ts --network goerli && yarn verify:secondary && yarn disableUpgradeability:goerli",
    "deploy:secondary:sepolia": "yarn hardhat run scripts/deploySecondary.ts --network sepolia && yarn verify:secondary && yarn disableUpgradeability:sepolia",
    "deploy:secondary:polygon": "yarn hardhat run scripts/deploySecondary.ts --network polygon && yarn verify:secondary && yarn disableUpgradeability:polygon",
    "deploy:secondary:mumbai": "yarn hardhat run scripts/deploySecondary.ts --network mumbai && yarn verify:secondary && yarn disableUpgradeability:mumbai",
    "deploy:secondary:gnosis": "yarn hardhat run scripts/deploySecondary.ts --network gnosis && yarn verify:secondary && yarn disableUpgradeability:gnosis",
    "deploy:secondary:chiado": "yarn hardhat run scripts/deploySecondary.ts --network chiado && yarn verify:secondary && yarn disableUpgradeability:chiado",
    "disableUpgradeability:goerli": "yarn hardhat run scripts/disableUpgradeability.ts --network goerli",
    "disableUpgradeability:sepolia": "yarn hardhat run scripts/disableUpgradeability.ts --network sepolia",
    "disableUpgradeability:polygon": "yarn hardhat run scripts/disableUpgradeability.ts --network polygon",
    "disableUpgradeability:mumbai": "yarn hardhat run scripts/disableUpgradeability.ts --network mumbai",
    "disableUpgradeability:gnosis": "yarn hardhat run scripts/disableUpgradeability.ts --network gnosis",
    "disableUpgradeability:chiado": "yarn hardhat run scripts/disableUpgradeability.ts --network chiado",
    "disableUpgradeability:apothem": "yarn hardhat run scripts/disableUpgradeability.ts --network apothem",
    "verify:main": "npx ts-node scripts/verifyMain.ts",
    "verify:secondary": "npx ts-node scripts/verifySecondary.ts",
    "xdeploy": "npx hardhat xdeploy",
    "xdeploy:secondary:diva": "npx ts-node scripts/xdeploy/xdeploySecondary.ts && yarn xdeploy:disableUpgradeability",
    "xdeploy:disableUpgradeability": "npx ts-node scripts/xdeploy/xdeployDisableUpgradeability.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divaprotocol/diva-protocol-v1.git"
  },
  "author": "DIVA Squad",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/divaprotocol/diva-protocol-v1/issues"
  },
  "homepage": "https://www.divaprotocol.io/",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.0.0",
    "@ethersproject/providers": "^5.7.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@solidstate/contracts": "0.0.29",
    "@solidstate/spec": "0.0.29",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "chai": "4.3.4",
    "dotenv": "8.6.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "3.4.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "2.5.0",
    "hardhat-gas-reporter": "1.0.4",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.18",
    "standard": "16.0.3",
    "ts-node": "^10.7.0",
    "typechain": "^8.0.0",
    "typescript": "^4.6.3",
    "xdeployer": "^1.1.20"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "eip-712": "^1.0.0",
    "sourcify-js": "^1.6.7",
    "trees": "^0.0.4"
  },
  "resolutions": {
    "hardhat/**/@ethereumjs/tx": "3.5.0"
  }
}
